@model GroupDocs.Annotation.Mvc.Sample.Models.DocumentGuidAnnotationModel

@{
    ViewBag.Title = "Document annotations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Edit annotation</title>
</head>
<body>
<nav class="navbar navbar-default">
    <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
            <li>
                <h2>Edit annotation</h2>
            </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="@Url.Action("AnnotationReplies", "Annotation", new {fileId = @Model.FileId, annotationId = @Model.Annotation.Id})">Edit Annotation Replies</a>
            </li>
            <li>
                <a href="@Url.Action("DocumentAnnotations", "Annotation", new {fileId = @Model.FileId})">Back to the annotations</a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Annotation")">Back to the main page</a>
            </li>
        </ul>
    </div>
</nav>

@using (Html.BeginForm("SaveEditedAnnotation", "Annotation", new {fileId = @Model.FileId}, FormMethod.Post, new {@class = "form-horizontal"}))
{
    <div class="input-group col-sm-offset-1">
        <div class="col-md-5">
            <div class="form-group">
                <label for="Id">Id:</label>
                <input type="text" name="Id" id="Id" value="@Model.Annotation.Id" readonly/>
            </div>
            <div class="form-group">
                <label for="Type">Type:</label>
                <input type="text" name="Type" id="Type" value="@Model.Annotation.Type" readonly/>
            </div>
            <div class="form-group">
                <label for="fileId">Document id:</label>
                <input type="text" name="fileId" id="fileId" value="@Model.FileId" readonly/>
            </div>
            <div class="form-group">
                <label for="User">Creator:</label>
                <input type="text" name="Metadata.Creator" id="User" value="@Model.Annotation.Metadata.Creator" readonly/>
            </div>
            <div class="form-group">
                <label for="CreatedOn">CreatedOn:</label>
                <input type="text" name="Metadata.CreatedOn" id="CreatedOn" value="@Model.Annotation.Metadata.CreatedOn" readonly/>
            </div>
            <div class="form-group">
                <label for="Guid">Guid:</label>
                <input type="text" name="Guid" id="Guid" value="@Model.Annotation.Id" readonly/>
            </div>
            <div class="form-group">
                <label for="MarkerLeft">MarkerLeft:</label>
                <input type="text" name="MarkerLeft" id="MarkerLeft" value="@Model.Annotation.Position.X"/>
            </div>
            <div class="form-group">
                <label for="MarkerTop">MarkerTop:</label>
                <input type="text" name="MarkerTop" id="MarkerTop" value="@Model.Annotation.Position.Y"/>
            </div>
            <div class="form-group">
                <label for="Width">Width:</label>
                <input type="text" name="Width" id="Width" value="@Model.Annotation.Width"/>
            </div>
            <div class="form-group">
                <label for="Height">Height:</label>
                <input type="text" name="Height" id="Height" value="@Model.Annotation.Height"/>
            </div>
            <div class="form-group">
                <label for="SvgPath">SvgPath:</label>
                <input type="text" name="SvgPath" id="SvgPath" value="@Model.Annotation.SvgPath"/>
            </div>
            <div class="form-group">
                <label for="TextPosition">TextPosition:</label>
                <input type="text" name="TextPosition" id="TextPosition" value="@Model.Annotation.TextPosition"/>
            </div>
            <div class="form-group">
                <label for="TextLength">TextLength:</label>
                <input type="text" name="TextLength" id="TextLength" value="@Model.Annotation.TextLength"/>
            </div>
            <div class="form-group">
                <label for="FieldText">FieldText:</label>
                <input type="text" name="FieldText" id="FieldText" value="@Model.Annotation.FieldText"/>
            </div>
            <div class="form-group">
                <label for="FontFamily">FontFamily:</label>
                <input type="text" name="FontFamily" id="FontFamily" value="@Model.Annotation.FontFamily"/>
            </div>
            <div class="form-group">
                <label for="FontSize">FontSize:</label>
                <input type="text" name="FontSize" id="FontSize" value="@Model.Annotation.FontSize"/>
            </div>
            <div class="form-group">
                <label for="FontColor">FontColor:</label>
                <input type="text" name="FontColor" id="FontColor" value="@Model.Annotation.FontColor"/>
            </div>
            <div class="form-group">
                <label for="PageNumber">PageNumber:</label>
                <input type="text" name="PageNumber" id="PageNumber" value="@Model.Annotation.PageNumber"/>
            </div>
            <div class="form-group">
                <label for="Row">Row:</label>
                <input type="text" name="Row" id="Row" value="@Model.Annotation.Row"/>
            </div>
            <div class="form-group">
                <label for="Column">Column:</label>
                <input type="text" name="Column" id="Column" value="@Model.Annotation.Column"/>
            </div>
            <div class="form-group">
                <label for="PenColor">PenColor:</label>
                <input type="text" name="PenColor" id="PenColor" value="@Model.Annotation.PenColor"/>
            </div>
            <div class="form-group">
                <label for="PenWidth">PenWidth:</label>
                <input type="text" name="PenWidth" id="PenWidth" value="@Model.Annotation.PenWidth"/>
            </div>
            <div class="form-group">
                <label for="PenStyle">PenStyle:</label>
                <input type="text" name="PenStyle" id="PenStyle" value="@Model.Annotation.PenStyle"/>
            </div>
            <div class="form-group">
                <label for="BackgroundColor">BackgroundColor:</label>
                <input type="text" name="BackgroundColor" id="BackgroundColor" value="@Model.Annotation.BackgroundColor"/>
            </div>
        </div>
    </div>
    <div class="input-group col-sm-offset-1">
        <span class="input-group-btn">
                <button class="btn btn-primary" type="submit" style="margin-top: 5px; width: 300px;">Save</button>
            </span>
    </div>
}
</body>
</html>