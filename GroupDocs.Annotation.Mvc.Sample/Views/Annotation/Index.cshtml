@model IEnumerable<GroupDocs.Annotation.Contracts.DocumentMetadata>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Groudocs.Annotation MVC Application Sample</title>
</head>
<body>

<div class="panel panel-default">
    <table class="table table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>Document id</th>
        </tr>
        @foreach (var document in Model)
        {
            <tr>
                <td>@document.Name</td>
                <td>@document.DocumentId</td>
                <td>
                    @using (Html.BeginForm("GetPdfVersionOfDocument", "Annotation", new {fileId = @document.DocumentId}, FormMethod.Post, new {enctype = "multipart/form-data"}))
                    {
                        <button class="btn btn-default  btn-annotation" type="submit">Get Clear Document</button>
                    }
                    @using (Html.BeginForm("GetAnnotatedDocument", "Annotation", new {fileId = @document.DocumentId}, FormMethod.Post, new {enctype = "multipart/form-data"}))
                    {
                        <button class="btn btn-default  btn-annotation" type="submit">Get Annotated Document</button>
                    }
                </td>
                <td>
                    @using (Html.BeginForm("DeleteDocument", "Annotation", new {fileId = @document.DocumentId}, FormMethod.Post, new {enctype = "multipart/form-data"}))
                    {
                        <button class="btn btn-default  btn-annotation" type="submit">Delete</button>
                    }
                </td>
                <td>
                    @using (Html.BeginForm("DocumentAnnotations", "Annotation", new {fileId = @document.DocumentId}, FormMethod.Post, new {enctype = "multipart/form-data"}))
                    {
                        <button class="btn btn-default btn-annotation" type="submit"><i class="icon-"></i>Annotations</button>
                    }
                </td>
                <td>
                    @using (Html.BeginForm("ManageDocumentCollaborators", "Annotation", new {fileId = @document.DocumentId}, FormMethod.Post, new {enctype = "multipart/form-data"}))
                    {
                        <button class="btn btn-default btn-annotation" type="submit"><i class="icon-"></i>Manage collaborators</button>
                    }
                </td>
            </tr>
        }
    </table>
    @using (Html.BeginForm("UploadFile", "Annotation", FormMethod.Post, new {enctype = "multipart/form-data"}))
    {
        <input type="file" class="file fileinput" name="file" data-show-preview="false"/>
    }
</div>
</body>
</html>