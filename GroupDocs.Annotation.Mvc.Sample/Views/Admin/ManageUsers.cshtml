@model GroupDocs.Annotation.Mvc.Sample.Models.UsersRolesModel

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Manage users</title>
</head>
<body>
<nav class="navbar navbar-default">
    <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
            <li>
                <h2>Users</h2>
            </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="@Url.Action("Index", "Annotation")">Back to the main page</a>
            </li>
        </ul>
    </div>
</nav>

@if (!Model.Users.Any())
{
    <div class="row">
        <div class="col-md-3">There no users in storage</div>
    </div>
}

@foreach (var user in Model.Users)
{
    using (Html.BeginForm("AddUserRole", "Admin", new {userId = @user.Id}, FormMethod.Post, new {enctype = "multipart/form-data"}))
    {
        <div class="input-group col-sm-offset-1">
            <div class="col-md-5">
                <div class="form-group">
                    <label for="UserId">Id:</label>
                    <input type="text" name="UserId" id="UserId" value="@user.Id" readonly/>
                </div>
                <div class="form-group">
                    <label for="UserName">Name:</label>
                    <input type="text" name="UserName" id="UserName" value="@user.Name" readonly/>
                </div>
                <div class="form-group">
                    <label for="Login">Login:</label>
                    <input type="text" name="Login" id="Login" value="@user.Login" readonly/>
                </div>
                <div class="form-group">
                    <label for="Password">Password:</label>
                    <input type="text" name="Password" id="Password" value="@user.Password" readonly/>
                </div>
                <div class="form-group">
                    <label>Roles:</label>
                    @if (user.Roles.Any())
                    {
                        foreach (var role in user.Roles)
                        {
                            <div class="input-group col-md-6" style="width: 300px">
                                <input type="text" class="form-control" value="@role">
                                <span class="input-group-btn">
                                        <button class="btn btn-default" type="button" onclick="location.href = '@Url.Action("DeleteUserRole", "Admin", new {roleName = @role, userId = @user.Id})' ">
                                            <span class="glyphicon glyphicon-remove">
                                    </span>
                                    </button>
                                    </span>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="form-group">
                            <input type="text" name="Permission" id="Permission" value="User doesnt have roles" readonly/>
                        </div>
                    }
                </div>
                <div class="form-group">
                    <label for="roleName">Add:</label>
                    <select class="form-control" name="roleName" id="roleName" style="width: 300px">
                        @foreach (var role in Model.Roles)
                        {
                            <option value=@role>
                                @role
                            </option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="input-group col-sm-offset-1">
            <span class="input-group-btn col-md-5">
                    <button class="btn btn-primary" type="submit" style="margin-top: 5px; width: 300px;">Add role</button>
                </span>
        </div>
    }
    <hr/>
}
</body>
</html>