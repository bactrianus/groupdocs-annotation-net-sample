@using GroupDocs.Annotation.DataLayer.Sample.AuthenticationTypes
<!DOCTYPE html>
<html style="background: white">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @RenderSection("styles", false)
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
@if (TempData["Notification"] != null)
{
    @Html.Hidden("NotificationAutoHide", TempData["NotificationAutoHide"])
    <div id="NotificationBox" class="@TempData["NotificationCSS"]" style="display: none; position: absolute">
        @TempData["Notification"]
    </div>
}
<nav class="navbar navbar-default">
    <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
            <li>
                <a href="@Url.Action("Index", "Annotation")">
                    <h2>GroupDocs.Annotation Demo</h2>
                </a>
            </li>
        </ul>
        <ul class="nav navbar-nav navbar-right" style="margin-right: 10px; margin-top: 40px">
            <li>
                <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        @((User as MyPrincipal).Information.UserName) <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        @if (!(User as MyPrincipal).Information.Roles.Contains("Guest"))
                        {
                            <li>
                                <a href="@Url.Action("UserProfile", "Account")">Profile</a>
                            </li>
                            <li class="divider"></li>
                        }
                        @if ((User as MyPrincipal).Information.Roles.Contains("Admin"))
                        {
                            <li>
                                <a href="@Url.Action("ManageUsers", "Admin")">Users</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ManageRoles", "Admin")">Roles</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ManagePermissions", "Admin")">Permissions</a>
                            </li>
                            <li class="divider"></li>
                        }

                        <li>
                            <a href="@Url.Action("Logout", "Account")">Logout</a>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>
    </div>
</nav>

@RenderBody()

<footer style="background: white"></footer>
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jasny-bootstrap")
@Scripts.Render("~/bundles/fileinput")
@RenderSection("scripts", false)
<script language="javascript" type="text/javascript">
    //Used to display and close the system notifications
    $(document).ready(function() {
        $("#NotificationBox").fadeIn(1000);

        if ($("#NotificationAutoHide").val() == "true") {
            $("#NotificationBox").delay(3000).fadeOut(2000);
            //$("#NotificationBox").delay(5000).slideUp(1000);
        }
    });
</script>
</body>
</html>