@model GroupDocs.Annotation.Contracts.DataObjects.UserDataObject
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Profile</title>
</head>
<body>
<nav class="navbar navbar-default">
    <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
            <li>
                <h2>Profile</h2>
            </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="@Url.Action("Index", "Annotation")">Back to the main page</a>
            </li>
        </ul>
    </div>
</nav>
<div class="row">
    @using (Html.BeginForm("EditProfile", "Account", FormMethod.Post, new {@class = "form-horizontal"}))
    {
        <div class="input-group col-sm-offset-1">
            <div class="col-md-5">
                <div class="form-group">
                    <label for="Id">User Id:</label>
                    <input type="text" readonly name="Id" id="Id" value="@Model.Id"/>
                </div>
                <div class="form-group">
                    <label for="Login">Login:</label>
                    <input type="text" name="Login" id="Login" value="@Model.Login" readonly/>
                </div>
                <div class="form-group">
                    <label for="Name">User name:</label>
                    <input type="text" name="Name" id="Name" value="@Model.Name"/>
                </div>
                <div class="form-group">
                    <label for="Password">Password:</label>
                    <input type="text" name="Password" id="Password" value="@Model.Password"/>
                </div>
                <div class="form-group">
                    <label>Roles:</label>
                    @foreach (var role in Model.Roles)
                    {
                        <input type="text" name="Roles" value="@role" readonly/>
                        <br>
                    }


                </div>
            </div>
        </div>
        <div class="input-group col-sm-offset-1">
            <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit" style="margin-bottom: 20px; margin-top: 5px; width: 300px;">Save</button>
                </span>
        </div>
    }
</div>
</body>
</html>