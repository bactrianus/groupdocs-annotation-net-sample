@model GroupDocs.Annotation.DataLayer.Sample.AuthenticationTypes.Models.LoginModel

@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Account/AccountLayout.cshtml";
}
<h2 class="col-sm-offset-1">Sign Up</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-5 col-sm-offset-1">
            <div>@Html.LabelFor(u => u.Username)</div>
            <div>@Html.TextBoxFor(u => u.Username, new {id = "userid", @class = "inptFld"})</div>

            <div>@Html.LabelFor(u => u.Password)</div>
            <div>@Html.PasswordFor(u => u.Password, new {id = "passowdid", @class = "inptFld"})</div>

            <button type="submit" class="btn btn-default" value="Login" style="margin-top: 10px;">Sign Up</button>
        </div>

    </div>
}